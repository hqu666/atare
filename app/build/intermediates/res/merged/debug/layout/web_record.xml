<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

		<TableRow
		    android:id="@+id/wr_titolRow"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="top" >

			<TextView
			    android:id="@+id/textView1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="top"
			    android:text="@string/wrd_titol" />

			<TextView
			    android:id="@+id/wr_titoled"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="10dp"
			    android:layout_weight="1"
			    android:inputType="textMultiLine" >

			</TextView>

		</TableRow>

		<TableRow
		    android:id="@+id/wr_urlRow"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="top" >

			<TextView
			    android:id="@+id/wr_urltf"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="top"
			    android:text="@string/wrd_url" />

			<TextView
			    android:id="@+id/wr_urlet"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="10dp"
			    android:layout_weight="1"
			    android:inputType="textMultiLine" >

			</TextView>
		</TableRow>

		<TableRow
			android:id="@+id/wr_scaleRow"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >

			<TextView
			    android:id="@+id/wr_scaltf"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="top"
			    android:layout_marginLeft="2dp"
			    android:text="@string/wrd_scale" />

			<TextView
			    android:id="@+id/wr_scaled"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="10dp"
			    android:layout_weight="1" >

			</TextView>
		</TableRow>

		</TableLayout>

    <TextView
        android:id="@+id/wr_message_tf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>